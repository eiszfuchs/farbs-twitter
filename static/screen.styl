$border-radius =      2px;
$vertical-spacing   = 8px; // |
$horizontal-spacing = 6px; // -

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;

    cursor: default;
}

html {
    background-color: #f1f1f1;

    font-family: sans-serif;
    font-size: 12px;
}

timeline {
    display: block;
    padding: ($horizontal-spacing) 0;
}

tweet {
    display: block;
    position: relative;
    overflow: hidden; // simple clearfix

    padding: ($horizontal-spacing) ($vertical-spacing * 2);

    $avatar-size = 48px;

    img.avatar {
        display: block;
        border-radius: $border-radius;

        position: absolute;

        width: $avatar-size;
        height: $avatar-size;

        top: ($horizontal-spacing);
        left: ($vertical-spacing * 2);
    }

    .content {
        border-radius: $border-radius;

        background-color: #ffffff;
        // box-shadow: 0 1px 2px rgba(#000000, .25);

        position: relative;

        margin-left: ($avatar-size + $vertical-spacing);
        padding: ($horizontal-spacing) ($vertical-spacing);

        header {
            opacity: .65;

            line-height: 1.35em;

            .display-name {
                display: block;

                text-transform: none;
            }

            .screen-name {
                display: none;

                text-transform: uppercase;
            }

            &:hover {
                .display-name {
                    display: none;
                }

                .screen-name {
                    display: block;
                }
            }
        }

        p {
            raw {
                display: block;

                &:not(:empty) {
                    margin-top: ($horizontal-spacing);
                }
            }
        }

        aside {
            position: absolute;
            top: $horizontal-spacing;
            right: $vertical-spacing;
            z-index: 1;

            opacity: .35;

            a {
                cursor: pointer;
                text-decoration: none;
            }
        }

        p {
            line-height: 1.35em;
        }
    }

    media {
        display: block;

        margin-left: ($avatar-size + $vertical-spacing);

        div {
            margin-top: $horizontal-spacing;
        }

        img {
            display: block;

            max-width: 100%;

            border-radius: $border-radius;
        }

        .animated_gif {
            video {
                width: 100%;
                height: auto;

                border-radius: $border-radius;
            }

            position: relative;

            &::before {
                content: "GIF";

                background-color: rgba(#ffffff, .5);

                padding: 3px 4px;
                border-radius: $border-radius;

                font-weight: bold;
                font-size: 10px;

                position: absolute;
                top: $horizontal-spacing;
                left: $vertical-spacing;
            }
        }
    }
}
